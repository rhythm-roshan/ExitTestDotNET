@model IEnumerable<Nagarro.CasinoPortal.Web.Shared.UserViewModel>








<p>
    @Html.ActionLink("Create New", "RegisterUser")
</p>
<div class="container" style="margin-top:inherit ; margin-bottom:2%">
<form method="get" class="row">
    <div class="input-group col-sm-3">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input id="email" type="text" class="form-control" name="searchName" placeholder="Name">
    </div>
    <div class="input-group col-sm-3">
        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
        <input id="email" type="text" class="form-control" name="searchEmail" placeholder="Email">
    </div>
    <div class="input-group col-sm-3">
        <span class="input-group-addon"><i class="glyphicon glyphicon-phone"></i></span>
        <input id="email" type="text" class="form-control" name="searchContact" placeholder="Contact">
    </div>
    <button class="btn btn-default col-sm-1" type="submit">
        <i class="glyphicon glyphicon-search"></i>
    </button>
</form>
    </div>
<table class="table table-striped">
    <tr class="text-center">
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountBalance)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.UniqueUserId)
        </th>

       

        <th>
            Add Amount
        </th>

        <th>
            @Html.DisplayName("Delete")
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Convert.ToDateTime(item.DOB).ToString("dd/MM/yyyy")
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniqueUserId)
            </td>

            <td>

                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#@item.UserID"><i class="material-icons">add</i></button>
                <div class="modal fade" id="@item.UserID" role="dialog">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            @using (Html.BeginForm("RechargeAmount", "User", FormMethod.Post))
                            {
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Enter Amount</h4>

                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <p>
                                            Amount  :
                                            <div class="input-field col s6">

                                                <input required="required" placeholder="amount" name="AccountBalance" id="AccountBalance" type="text" class="form-control validate">
                                                <input type="hidden" name="UserID" value=@item.UserID>

                                            </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <input type="submit" class="btn btn-default" value="Submit" />
                                </div>
                            }
                        </div>
                    </div>
                </div>


            </td>

            <td>


                <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#@item.UniqueUserId"><i class="material-icons">delete</i></button>
                <div class="modal fade" id="@item.UniqueUserId" role="dialog">
                    <div class="modal-dialog modal-sm">
                        <div class="modal-content">
                            @using (Html.BeginForm("Delete", "User", FormMethod.Post))
                            {
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Enter Amount</h4>

                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <p>
                                           Do You want to delete?
                                            <input type="hidden" name="UniqueUserId" value=@item.UniqueUserId>

                                            </div>
                                    </div>
                               
                                <div class="modal-footer">
                                    <input type="submit" class="btn btn-default" value="Delete" />
                                    <input type="submit" class="btn btn-default" data-dismiss="modal" value="Cancel" />
                                </div>
                            }
                        </div>
                    </div>
                    </div>
          


            </td>


        </tr>
    }

</table>
